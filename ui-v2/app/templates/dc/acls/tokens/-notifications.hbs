{{#if (eq type 'create')}}
  {{#if (eq status 'success') }}
    Your token has been added.
  {{else}}
    There was an error adding your token.
  {{/if}}
{{else if (eq type 'update') }}
  {{#if (eq status 'success') }}
    Your token has been saved.
  {{else}}
    There was an error saving your token.
  {{/if}}
{{ else if (eq type 'delete')}}
  {{#if (eq status 'success') }}
    Your token was deleted.
  {{else}}
    There was an error deleting your token.
  {{/if}}
{{ else if (eq type 'logout')}}
  {{#if (eq status 'success') }}
    You are now logged out.
  {{else}}
    There was an error logging out.
  {{/if}}
{{/if}}

